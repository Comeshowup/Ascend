{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "lib": [
            "ES2022"
        ],
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "baseUrl": "./src",
        "paths": {
            "@config/*": [
                "config/*"
            ],
            "@models/*": [
                "models/*"
            ],
            "@services/*": [
                "services/*"
            ],
            "@commands/*": [
                "commands/*"
            ],
            "@events/*": [
                "events/*"
            ],
            "@jobs/*": [
                "jobs/*"
            ],
            "@utils/*": [
                "utils/*"
            ],
            "@types/*": [
                "types/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}